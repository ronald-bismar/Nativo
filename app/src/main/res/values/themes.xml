<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AymarSäwi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/colorRojo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.AymarSäwi" parent="Base.Theme.AymarSäwi" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/botonverde</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="estiloDeTexto">
        <item name="android:fontFamily">@font/linottebold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="estiloTextoAlternativo">
        <item name="android:fontFamily">@font/reef</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#009688</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.AymarSäwi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AymarSäwi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AymarSäwi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textoGuia">
        <item name="android:fontFamily">@font/linottebold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="estiloBotonComprobar">
        <item name="android:fontFamily">@font/linottebold</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#009688</item>
        <item name="android:text">"COMPROBAR"</item>
        <item name="fontFamily">@font/linottebold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="estiloBotonDeslizar">
        <item name="android:fontFamily">@font/linottebold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">"COMPROBAR"</item>
        <item name="fontFamily">@font/linottebold</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="DrawerMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="estilo_drawer_texto">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/linottesemibold</item>
    </style>

</resources>