<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="301dp"
    android:layout_height="406dp"
    tools:context=".Avatars.FragmentA1"
    android:orientation="vertical"
    android:background="@drawable/bordesredondos"
    android:backgroundTint="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/wila"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wila"
        android:fontFamily="@font/linottesemibold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_margin="2dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/linotteregular"
        android:textAlignment="center"
        android:text="&quot;El viento no tiene miedo de atravesar obstáculos, y tampoco deberíamos tener miedo de superar nuestros propios límites&quot;"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/cronusround"
        android:textAlignment="center"
        android:text="Significado: wila: viento\n(aymara)"
        android:textSize="15sp"
        android:layout_marginBottom="200dp"/>

</LinearLayout>