<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dinamica3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsDinamicas.FragmentDinamica3">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtTitle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/linotteheavy"
        android:text="COMO SE ESCRIBE HERMANO?"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/imagen3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/linottebold"
        android:text="ESCRITURA:"
        android:textColor="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTitle3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnComprobar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#3B6F9A"
        android:fontFamily="@font/linottebold"
        android:text="Comprobar"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llContenedorOpciones3"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imagen3"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/llContenedorOpciones3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle3"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@mipmap/hermanom" />

    <LinearLayout
        android:id="@+id/llContenedorOpciones3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnComprobar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen3"
        app:layout_constraintVertical_bias="0.5">

        <EditText
            android:id="@+id/txtRespuesta3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/strokedelgado"
            android:ems="10"
            android:fontFamily="@font/linottesemibold"
            android:gravity="center"
            android:inputType="textNoSuggestions" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>