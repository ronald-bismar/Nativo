        android:textAlignment="center"
        android:textSize="30dp"

        app:layout_constraintBottom_toTopOf="@+id/btnIpa"
        app:layout_constraintEnd_toStartOf="@+id/btnTiwula"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPalabra"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton8"
        style="@style/estiloBotonComprobar"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIpa"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnKullaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
