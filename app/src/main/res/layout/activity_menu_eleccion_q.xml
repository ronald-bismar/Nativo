<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color4"
    android:orientation="vertical"
    tools:context=".PantallasPrincipales.MenuEleccionQ"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="#176B87"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btnBurger"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:clickable="true"
                android:padding="15dp"
                android:src="@mipmap/burgerbutton" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/arista_alternate"
                android:text="OPCIONES: "
                android:textColor="@color/white"
                android:textSize="35sp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageView
                android:id="@+id/imgPersonaje"
                android:layout_width="44dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLecciones"
            android:layout_width="225dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boton_verde_claro"
            android:fontFamily="@font/linottesemibold"
            android:paddingBottom="1dp"
            android:text="@string/lecciones"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnDiccionario"
            app:layout_constraintEnd_toStartOf="@+id/imagenReferencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imagenReferencia"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="33dp"
            android:src="@mipmap/img_2"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnLecciones"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDiccionario"
            android:layout_width="225dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boton_verde_claro"
            android:fontFamily="@font/linottesemibold"
            android:paddingBottom="1dp"
            android:text="@string/diccionario"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnChat"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLecciones"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDiccionario"
            app:layout_constraintTop_toBottomOf="@+id/imagenReferencia"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@mipmap/diccionario1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChat"
            android:layout_width="225dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boton_verde_claro"
            android:fontFamily="@font/linottesemibold"
            android:paddingBottom="1dp"
            android:text="CONVERSANDO EN QUECHUA"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnHistorias"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDiccionario"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="140dp"
            android:layout_height="112dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnChat"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@mipmap/hablando1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHistorias"
            android:layout_width="225dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="37dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/boton_verde_claro"
            android:fontFamily="@font/linottesemibold"
            android:paddingBottom="1dp"
            android:text="HISTORIAS DE LA CULTURA QUECHUA"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/imageView100"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnHistorias"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@mipmap/relojdearena" />

    </androidx.constraintlayout.widget.ConstraintLayout>

   <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
       android:background="#E9F1F3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_mainq"
        app:menu="@menu/activity_main_drawer"
       app:itemTextAppearance="@style/AppTheme.DrawerArrowStyle"/>

</androidx.drawerlayout.widget.DrawerLayout>