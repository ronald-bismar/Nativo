<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout61"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClaseNumeros.FragmentNumeros9">

    <TextView
        android:id="@+id/textView114"
        style="@style/textoGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la respuesta"
        app:layout_constraintBottom_toTopOf="@+id/imgVSonido1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imgVSonido1"
        android:layout_width="180dp"
        android:layout_height="189dp"
        android:clickable="true"
        android:src="@mipmap/sonidoactivo"
        app:layout_constraintBottom_toTopOf="@+id/btnBDias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView114"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBTardes"
        style="@style/textoGuia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_yellow"
        android:backgroundTint="#8EEEFA"
        android:fontFamily="@font/linottesemibold"
        android:text="Buenas tardes"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnBNoches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBDias"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBDias"
        style="@style/textoGuia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_yellow"
        android:backgroundTint="#8EEEFA"
        android:fontFamily="@font/linottesemibold"
        android:text="Buenos dias"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnBTardes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVSonido1"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBNoches"
        style="@style/textoGuia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_yellow"
        android:backgroundTint="#8EEEFA"
        android:fontFamily="@font/linottesemibold"
        android:text="Buenas noches"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBTardes"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>