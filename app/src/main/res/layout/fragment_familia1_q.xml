<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuechuaFamilia.FragmentFamilia1Q">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color1"
        android:fontFamily="@font/linotteheavy"
        android:padding="0dp"
        android:text="@string/selecciona_la_imagen_correcta"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnPapa"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/bordesredondeados"
        android:backgroundTint="@color/color2"
        android:scaleType="fitCenter"
        android:src="@mipmap/papa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBtnHermano"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageButton
        android:id="@+id/imgBtnHermano"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="308dp"
        android:background="@drawable/bordesredondeados"
        android:backgroundTint="@color/color2"
        android:scaleType="fitCenter"
        android:src="@mipmap/hermano"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnPapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/linottebold"
        android:text="Tatay"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>