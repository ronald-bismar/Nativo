<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallasPrincipales.FragmentConfiguracion">

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#176B87"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/linottesemibold"
            android:paddingStart="30dp"
            android:paddingTop="5dp"
            android:text="Configuracion"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_weight="2"/>

        <ImageButton
            android:id="@+id/imgBtnAtras"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@mipmap/atras"
            android:background="@null"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="664dp"
        tools:layout_editor_absoluteY="67dp"
        app:layout_constraintTop_toBottomOf="@id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bordeconfiguracion"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/textView161"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linottebold"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:text="Sonido"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linottesemibold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="Configuracion de los sonidos"
                    android:textColor="#676262"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bordeconfiguracion"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linottebold"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:text="Guias de secciones"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/linottesemibold"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="Determina cuando ver las guias de seccion"
                    android:textColor="#676262"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>