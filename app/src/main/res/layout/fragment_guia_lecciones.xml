<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A52C23"
    tools:context=".FragmentsGuias.FragmentGuiaLecciones">

    <TextView
        android:id="@+id/textView94"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/linottebold"
        android:text="Bienvenido a la seccion de palabras!"
        android:textAlignment="center"
        android:textColor="@color/color4"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="262dp"
        android:layout_height="316dp"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/esquinasredondas"
        android:backgroundTint="#7A1D1D"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView94">

        <ImageView
            android:id="@+id/imageView46"
            android:layout_width="107dp"
            android:layout_height="130dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/condorleccion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="107dp"
            android:layout_height="130dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="56dp"
            android:elevation="5dp"
            android:src="@drawable/numerosleccion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView45"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView45"
            android:layout_width="107dp"
            android:layout_height="130dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="56dp"
            android:elevation="5dp"
            android:src="@drawable/animalesleccion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="253dp"
        android:layout_height="307dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:elevation="20dp"
        android:src="@drawable/polluelo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView96"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5" />

    <TextView
        android:id="@+id/textView96"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="104dp"
        android:fontFamily="@font/linotteregular"
        android:text="Aqui aprenderas las palabras del idioma desde lo mas basico"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView40"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEmpezarLecciones"
        android:layout_width="148dp"
        android:layout_height="43dp"
        android:layout_marginStart="131dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/button_background_lightblue"
        android:backgroundTint="@color/color2"
        android:elevation="5dp"
        android:fontFamily="@font/linottebold"
        android:text="Empezar"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView40" />


</androidx.constraintlayout.widget.ConstraintLayout>