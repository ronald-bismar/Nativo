<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="noScroll"

    tools:context=".ClaseFamilia.FragmentDinamica6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:context=".ClaseFamilia.FragmentDinamica6">

        <ImageView
            android:id="@+id/imagen6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/hermanas"
            app:layout_constraintBottom_toTopOf="@+id/txtTitle6"
            app:layout_constraintEnd_toStartOf="@+id/btnAudio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView111" />

        <TextView
            android:id="@+id/textView111"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:paddingTop="5dp"
            android:text="Elige la palabra correcta"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/imagen6"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnComprobar6"
            style="@style/estiloBotonComprobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flContenedorBotones6" />

        <ImageButton
            android:id="@+id/btnAudio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="61dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/iconosonido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagen6"
            app:layout_constraintTop_toBottomOf="@+id/textView111" />

        <TextView
            android:id="@+id/txtTitle6"
            android:layout_width="103dp"
            android:layout_height="27dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="207dp"
            android:layout_marginBottom="1dp"
            android:text="Hermana"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/campoRespuesta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagen6" />

        <TextView
            android:id="@+id/campoRespuesta"
            style="@style/textoGuia"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/strokedelgado"

            android:clickable="true"
            android:ems="10"
            android:focusable="true"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/flContenedorBotones6"
            app:layout_constraintEnd_toEndOf="@+id/flContenedorBotones6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/flContenedorBotones6"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle6" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flContenedorBotones6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="center"
            app:layout_constraintBottom_toTopOf="@+id/btnComprobar6"
            app:layout_constraintEnd_toEndOf="@+id/btnComprobar6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/btnComprobar6"
            app:layout_constraintTop_toBottomOf="@+id/campoRespuesta">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTiwula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/boton"
                android:fontFamily="@font/linottesemibold"
                android:padding="10dp"
                android:text="Tiwula/Ipu"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="471dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTayka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/boton"
                android:fontFamily="@font/linottesemibold"
                android:padding="10dp"
                android:text="Tayka"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="471dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKullaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/boton"
                android:fontFamily="@font/linottesemibold"
                android:padding="10dp"
                android:text="Kullaka"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="232dp"
                tools:layout_editor_absoluteY="567dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/boton"
                android:fontFamily="@font/linottesemibold"
                android:padding="10dp"
                android:text="Ipa/Lqusi"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="567dp" />
        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>