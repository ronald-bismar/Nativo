<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/strokedelgado"

    tools:context=".ClaseFamilia.FragmentFamilia8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Familia.fami8">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/btnPapa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/hermanos"
            app:layout_constraintBottom_toTopOf="@+id/textView117"
            app:layout_constraintEnd_toStartOf="@+id/btnAudio"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView111"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/textView111"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="5dp"
            android:text="Elige la palabra correcta"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTiwula3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background_yellow"
            android:padding="10dp"
            android:text="Tiwula/Ipu"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/btnIpa"
            app:layout_constraintEnd_toStartOf="@+id/btnKullaka2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContenPalabra"
            app:layout_constraintVertical_bias="0.5"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnKullaka2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background_yellow"
            android:padding="10dp"
            android:text="Kullaka"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/btnIpa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnTiwula3"
            app:layout_constraintTop_toBottomOf="@+id/etContenPalabra"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background_yellow"
            android:padding="10dp"
            android:text="Ipa/Laqusi"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/btnComprobar15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnJila1"
            app:layout_constraintTop_toBottomOf="@+id/btnTiwula3"
            app:layout_constraintVertical_bias="0.5"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJila1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background_yellow"
            android:padding="10dp"
            android:text="Jila"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/btnComprobar15"
            app:layout_constraintEnd_toStartOf="@+id/btnIpa"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTiwula3"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/btnAudio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/iconosonido"
            app:layout_constraintBottom_toTopOf="@+id/etContenPalabra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnPapa"
            app:layout_constraintTop_toBottomOf="@+id/textView111"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/textView117"
            android:layout_width="103dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="155dp"
            android:text="Hermano"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/etContenPalabra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPapa"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/etContenPalabra"
            style="@style/textoGuia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/btnTiwula3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView117"
            app:layout_constraintVertical_bias="0.5"
            android:background="@drawable/strokedelgado"
            android:layout_marginHorizontal="30dp"
            android:minHeight="60dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnComprobar15"
            style="@style/estiloBotonComprobar"
            android:layout_width="207dp"
            android:layout_height="43dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnIpa"
            app:layout_constraintVertical_bias="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>